@model ProiectColectiv.Models.User
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register </title>
    <link rel="stylesheet" href="~/css/Register.css">
</head>
<body>
    <div class="register">
        <h2>Register</h2>


        @using (Html.BeginForm())
        {
        <fieldset>
            <div>
                @Html.TextBoxFor(m => m.Email, new { @class = "inputbox", placeholder = "Email" })
            </div>
            <br />
            <div>
                @Html.PasswordFor(m => m.Password, new { @class = "inputbox", placeholder = "Password" })
            </div>
            <br />
            <div>
                @Html.TextBoxFor(m => m.Name, new { @class = "inputbox", placeholder = "Name" })
            </div>
            <br />
            <div>
                <input type="submit" value="Register" class="button">
            </div>            
        </fieldset>
        }
    </div>
</body>
</html>