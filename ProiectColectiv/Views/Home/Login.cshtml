@model ProiectColectiv.Models.User
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login </title>
    <link rel="stylesheet" href="~/css/Login.css">

</head>
<body>

    <div class="login">
        <h2>Login</h2>


        @using (Html.BeginForm())
        {
            <fieldset>
                <div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "inputbox", placeholder = "Email" })
                </div>
                <br />
                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "inputbox", placeholder = "Password" })
                </div>
                <br />
                <div>
                    <input type="submit" value="Login" class="button">
                </div>
            </fieldset>
        }
    </div>

</body>
</html>